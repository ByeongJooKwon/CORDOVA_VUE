<?xml version='1.0' encoding='utf-8'?>
<widget id="com.shinsung.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>신성이엔지</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <!-- this hook will point your config.xml to the DevServer on Serve -->
    <hook type="after_prepare" src="../node_modules/vue-cli-plugin-cordova/serve-config-hook.js" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="res/320x480.svg" width="320" height="480"/>
        <splash src="res/320x480.svg" width="640" height="960"/>
        <splash src="res/768x1024.svg" width="768" height="1024"/>
        <splash src="res/768x1024.svg" width="1536" height="2048"/>
        <splash src="res/640x1136.svg" width="640" height="1136"/>
        <splash src="res/750x1334.svg" width="750" height="1334"/>
        <splash src="res/750x1334.svg" width="1242" height="2208"/>
        <splash src="res/375x812.svg" width="1125" height="2436"/>
    </platform>
</widget>
